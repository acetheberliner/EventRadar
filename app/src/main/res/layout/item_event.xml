<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp">

        <!-- Immagine dell'evento -->
        <ImageView
            android:id="@+id/imageViewEvent"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/event_image"
            android:background="@drawable/rounded_corners_gray"/>

        <!-- Nome evento -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Titolo evento" />

        <!-- Data -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="4dp" />

        <!-- Luogo -->
        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luogo"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="2dp" />

        <!-- HINT PER DETTAGLI -->
        <TextView
            android:id="@+id/textDetailsHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tocca per visualizzare i dettagli"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- EVENTO PASSATO -->
        <TextView
            android:id="@+id/textExpired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENTO PASSATO"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
